<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FAF0BE"
        tools:context="com.example.android.valequizapp.MainActivity">

        <!--Name Input-->
        <EditText
            android:id="@+id/name_field_sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_name"
            android:inputType="textCapWords" />



<TextView
    style="@style/HeaderTextStyle"
    android:text="@string/num_question_1.1.1.1" />




        <TextView
            android:id="@+id/question_1.1.1.1"
            style="@style/CategoryStyle"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#FF007F"
            android:text=" which country is going to host  the next world cup"/>

        <CheckBox
            android:id="@+id/redundancyyyy_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/redundancyyyy" />

        <CheckBox
            android:id="@+id/availabilityyyy_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/availabilityyyy" />

        <CheckBox
            android:id="@+id/integrityyyy_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/integrityyyy" />

        <CheckBox
            android:id="@+id/confidentialityyyy_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/confidentialityyyy" />

        <CheckBox
            android:id="@+id/remote_accesss_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/remote_accesss" />

        <!--Line-->
        <View style="@style/Line"></View>

        <!--Question 2-->
        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/num_question_2.1.1.1" />

        <TextView
            android:id="@+id/question_2.1.1.1"
            style="@style/CategoryStyle"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#734F96"
            android:text="@string/question_2.1.1.1" />

        <RadioGroup
            android:id="@+id/question_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/answer_2_1_1_1_1radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/answer_2_1_1_1_1" />

            <RadioButton
                android:id="@+id/answer_2_2_2_2_2radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/answer_2_2_2_2_2" />

            <RadioButton
                android:id="@+id/answer_2_3_3_3_3radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/answer_2_3_3_3_3" />

            <RadioButton
                android:id="@+id/answer_2_4_4_4_4radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/answer_2_4_4_4_4" />
        </RadioGroup>

        <!--Line-->
        <View style="@style/Line">

        </View>

        <!--Question 3-->
        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/num_question_3.1.1.1" />

        <TextView
            android:id="@+id/question_3.1.1.1"
            style="@style/CategoryStyle"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#7B3F00"
            android:text="@string/question_3.1.1.1" />

        <RadioGroup
            android:id="@+id/question_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/tech111_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/tech111" />

            <RadioButton
                android:id="@+id/tech2222_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/tech2222" />

            <RadioButton
                android:id="@+id/tech3333_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/tech3333" />

            <RadioButton
                android:id="@+id/tech4444_radiobutton"
                style="@style/RadioButton_Answer"
                android:text="@string/tech4444" />


        </RadioGroup>

        <!--Line-->
        <View style="@style/Line"></View>

        <!--Question 4-->
        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/num_question_4_1_1_1" />

        <TextView
            android:id="@+id/question_4_1_1_1"
            style="@style/CategoryStyle"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#734F96"
            android:text="@string/question_4.1.1.1" />

        <CheckBox
            android:id="@+id/redundancy111_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/redundancy111" />

        <CheckBox
            android:id="@+id/redundancy222_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/redundancy222" />

        <CheckBox
            android:id="@+id/redundancy333_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/redundancy333" />

        <CheckBox
            android:id="@+id/redundancy444_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/redundancy444" />

        <CheckBox
            android:id="@+id/redundancy555_checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/redundancy555" />

        <!--Line-->
        <View style="@style/Line"></View>



        <!--Question 5-->
        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/num_question_55" />

        <TextView
            style="@style/CategoryStyle"

            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#FD8E09"
            android:text="@string/question_55" />

        <CheckBox
            android:id="@+id/answer_5_1_1checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/answer_5_1_1" />

        <CheckBox
            android:id="@+id/answer_5_2_2checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/answer_5_2_2" />

        <CheckBox
            android:id="@+id/answer_5_3_3checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/answer_5_3_3" />

        <CheckBox
            android:id="@+id/answer_5_4_4checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/answer_5_4_4" />

        <CheckBox
            android:id="@+id/answer_5_5_5checkbox"
            style="@style/Checkbox_Answer"
            android:text="@string/answer_5_5_5" />

        <!--Line-->
        <View style="@style/Line"></View>

        <Button
            android:id="@+id/end_test_button_sports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:onClick="end_Test"
            android:text="@string/end_test" />

    <!--Line-->
<View style="@style/Line"></View>

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/test_result" />

        <TextView
            android:id="@+id/test_result_text_view_sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=" "
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>
